<div class="slider">
    <div class="slide-viewer">
        <div class="slide-group">
            <div class="slide slide-1">
                <img src="../Photos/OriginalDelorean.png" alt="Delorean" style="width: 480px; height: 316px;">
            </div>

            <div class="slide slide-2">
                <img src="../Photos/BullittMustang.jpg" alt="Delorean" style="width: 480px; height: 316px;">
            </div>

            <div class="slide slide-3">
                <img src="../Photos/General_lee.jpg" alt="Echto 1" style="width: 475px; height: 316px;">
            </div>

            <div class="slide slide-4">
                <img src="../Photos/lotuss1.jpg" alt="Submersible Lotus" style="width: 466px; height: 262px;">
            </div>
        </div>
    </div>
    <div class="slide-buttons"></div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Recently Posted Events</h2>
        <p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EventTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventDate)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDate)
                        </td>
                    </tr>
                }
            </table>
        </p>

        <p>@Html.ActionLink("See More Events", "Index", "Events", "class=Links")</p>
    </div>
    <div class="col-md-6">
        <h2>Recently Posted Reviews</h2>
        <p>
            <table class="table">
                <tr>
                    <th>
                        Review Title
                    </th>
                    <th>
                        Review Date
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in ViewBag.TopFiveReviews)
                {
                    <tr>
                        <td>
                            @item.ReviewTitle;
                        </td>
                        <td>
                            @item.ReviewDate;
                        </td>
                    </tr>
                }

            </table>
        </p>

        <p>@Html.ActionLink("See More Review", "Index", "Reviews", "class=Links")</p>
    </div>
</div>

