            @foreach (var photo in ViewBag.SlideShowPhotos)
            {
                <div class="slide slide-" @slideCntr>
                    <img src="../Photos/@photo.PhotoPath" alt="Submersible Lotus" style="display:block;margin:auto;width: 466px; height: 262px;">
