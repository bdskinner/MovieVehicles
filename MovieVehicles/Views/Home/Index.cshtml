        </div>
    </div>
    <div class="slide-buttons"></div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Recently Posted Events</h2>
        <p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EventTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EventDate)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventDate)
                        </td>
                    </tr>
                }
            </table>
        </p>

        @*<p>@Html.ActionLink("See More Events", "Index", "Events", "class=Links")</p>*@
        <p>@Html.ActionLink("See More Events", "Index", "Events")</p>
    </div>
    <div class="col-md-6">
        <h2>Recently Posted Reviews</h2>
        <p>
            <table class="table">
                <tr>
                    <th>
                        Review Title
                    </th>
                    <th>
                        Review Date
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in ViewBag.TopFiveReviews)
                {
                    <tr>
                        <td>
                            @item.ReviewTitle;
                        </td>
                        <td>
                            @item.ReviewDate;
                        </td>
                    </tr>
                }

            </table>
        </p>

        @*<p>@Html.ActionLink("See More Reviews", "Index", "Reviews", "class=Links")</p>*@
        <p>@Html.ActionLink("See More Reviews", "Index", "Reviews")</p>
    </div>
</div>

